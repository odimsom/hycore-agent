# HyCore Agent Configuration
# Hytale Dedicated Server Management

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# Default Hytale Server Settings
DEFAULT_HYTALE_PORT=5520
DEFAULT_JVM_XMS=2G
DEFAULT_JVM_XMX=4G

# Paths (optional - can be set per server)
# DEFAULT_SERVER_PATH=/path/to/hytale/server
# DEFAULT_ASSETS_PATH=/path/to/Assets.zip
# DEFAULT_BACKUP_DIR=/path/to/backups

# Security
# API_KEY=your-secure-api-key

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs